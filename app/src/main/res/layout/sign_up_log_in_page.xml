<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/j6_black">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="520dp"
            android:src="@drawable/log_in_background"
            android:layout_gravity="right"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <TextView
                    android:id="@+id/selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textColor="@color/white"
                    android:textSize="45sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/not_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Log in"
                        android:textColor="@color/j6_light_gray"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:onClick="switchMode"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/j6_dark_orange"
                android:textSize="23sp"
                android:layout_marginTop="70dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:imeOptions="actionSearch"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:text="fm@hkstp.org"
                android:backgroundTint="@color/j6_light_gray"
                android:hint="Enter your email here"
                android:textColorHint="@color/j6_light_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/j6_dark_orange"
                android:textSize="23dp"
                android:layout_marginTop="40dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:imeOptions="actionSearch"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/j6_light_gray"
                    android:hint="Enter your password here"
                    android:textColorHint="@color/j6_light_gray"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/see_password"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot email/password?"
                android:textColor="@color/j6_light_gray"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/log_in_arrow"
                android:layout_gravity="right"
                android:layout_marginTop="55dp"
                android:onClick="toHomePage"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>