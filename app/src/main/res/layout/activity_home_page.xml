        <LinearLayout
            android:id="@+id/work_order"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:background="@drawable/work_order_slide_up_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:gravity="center">

                <TextView
                    android:id="@+id/work_order_butt"
                    android:layout_width="140dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="@string/work_order"
                    android:textColor="@color/white"
                    android:textSize="22sp"/>

                <LinearLayout
                    android:id="@+id/search_butt"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp">
                    <ImageView
                        android:id="@+id/search_butt_img"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/white_mag_glass"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/favorite_butt"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp">
                    <ImageView
                        android:id="@+id/favorite_butt_img"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/white_heart"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_new_work_order"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/add_new_work_order"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fragment_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

