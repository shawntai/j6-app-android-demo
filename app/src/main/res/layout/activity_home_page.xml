            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dates_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

            </androidx.recyclerview.widget.RecyclerView>
            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/all_features"
                            android:textColor="@color/white"
                            android:textSize="17sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end">
                            <TextView
                                android:id="@+id/see_all_pack_up_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/see_all"
                                android:textColor="@color/j6_light_orange"
                                android:textSize="17sp"
                                android:layout_gravity="center"
                                android:onClick="expandOrCollapseAllFeatures"/>
                            <ImageView
                                android:id="@+id/see_all_pack_up_img"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/orange_homepage_see_all_downward_arrow"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:onClick="expandOrCollapseAllFeatures"/>
                        </LinearLayout>

                    </LinearLayout>
                    <include layout="@layout/all_feat_horiz"/>

                    <include layout="@layout/all_feat_expanded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/scheduled_maintenance"
                        android:textSize="17sp"
                        android:layout_margin="15dp"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">
                        <ListView
                            android:id="@+id/maintenance_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="30.0sp"/>
                    </LinearLayout>
